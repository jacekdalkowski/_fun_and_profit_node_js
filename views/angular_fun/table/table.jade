doctype html
html
	head
		// angular
		script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')

		// jQuery
		script(src='https://code.jquery.com/jquery-2.1.3.min.js')

		// bootstrap
		link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
		link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css')
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')



	body(ng-app='tableModule')
		.container(style='width:600px' ng-controller='tableController as tableCtrl')
			.row
				h1(style='text-align:center;')
					| Pracownicy
			.row(style='margin-top:30px')
				.col-md-6
					.row
						.col-md-4(style='text-align:right;')
							label(style='margin-top:7px;')
								| Wyszukaj
						.col-md-8
							input.form-control(type="text")
				.col-md-6
					.row
						.col-md-4(style='text-align:right;')
							label(style='margin-top:7px;')
								| Rodzaj
						.col-md-8
							input.form-control(type="text")
			.row
				table.table.table-striped
					thead
						tr
							td 
								| #
							td 
								| nazwisko
							td 
								| stanowisko
							td 
								| p≈Çaca
					tbody
						tr(ng-repeat="employee in tableCtrl.employees")
							td
								| {{employee.id}}
							td
								| {{employee.surname}}
							td
								| {{employee.position}}
							td
								| {{employee.salary | currency}}

		// my scripts
		script(type='text/javascript' src='/javascripts/angular_fun/table/table_module.js')