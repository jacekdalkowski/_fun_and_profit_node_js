doctype html
html
	head
		// rx
		script(type='text/javascript' src='/javascripts/utils/rx.all.js')

		// angular
		script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
		script(type='text/javascript' src='/javascripts/utils/rx-observable-watch.js')
		script(type='text/javascript' src='/javascripts/libs/angular-block-ui.js')

		// jQuery
		script(src='https://code.jquery.com/jquery-2.1.3.min.js')

		// bootstrap
		link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
		link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css')
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')

		link(rel='stylesheet' href='/stylesheets/angular-block-ui.css')


	body(ng-app='myApp.controllers')
		.container(style='width:600px' ng-controller='tableController as tableCtrl')
			.row
				h1(style='text-align:center;')
					| Pracownicy
			.row
				h4
					| Last update: {{model.lastUpdate | date:'yyyy-MM-dd HH:mm:ss'}}
			.row(style='margin-top:30px')
				.col-md-6
					.row
						.col-md-4(style='text-align:right;')
							label(style='margin-top:7px;')
								| Nazwisko
						.col-md-8
							input.form-control(type="text" 
								ng-model="model.surnameFilter"
								//-ng-keydown="tableCtrl.onSurnameFilterKeyDown($event)"
								)
				.col-md-6
					.row
						.col-md-4(style='text-align:right;')
							label(style='margin-top:7px;')
								| Stanowisko
						.col-md-8
							input.form-control(type="text" 
								ng-model="model.positionFilter"
								//-ng-keydown="tableCtrl.onPositionFilterKeyDown($event)"
								)
			.row
				table.table.table-striped
					thead
						tr
							td 
								| #
							td 
								| nazwisko
							td 
								| stanowisko
							td 
								| p≈Çaca
					tbody
						tr(ng-repeat="employee in model.employees")
							td
								| {{employee.id}}
							td
								| {{employee.surname}}
							td
								| {{employee.position}}
							td
								| {{employee.salary | currency}}

		// my scripts
		script(type='text/javascript' src='/javascripts/angular_fun/controllers/table_controller.js')
		script(type='text/javascript' src='/javascripts/angular_fun/services/employees_data_provider.js')